# Docker Environment Configuration
# Copy this file to .env and customize for your environment

# Application Settings
APP_PORT=8000
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration
DATABASE_TYPE=mongodb

# MongoDB Configuration
# For local/integration runs use localhost (127.0.0.1). When running inside Docker
# compose the service may be reachable via the compose service name (e.g. 'mongodb').
# CI workflows should set MONGODB_HOST explicitly (we recommend 127.0.0.1) to avoid
# relying on Docker service DNS names.
MONGODB_HOST=127.0.0.1
MONGODB_PORT=27017
MONGODB_DATABASE=school_library
MONGODB_USERNAME=admin
MONGODB_PASSWORD=password123
# For Atlas or advanced connections, use MONGODB_URI instead:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/school_library

# Logging
LOG_DIR=./logs
LOG_FORMAT=json
LOG_RETENTION_DAYS=30

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,*.example.com
CORS_ORIGINS=http://localhost:3000

# API Configuration
API_TITLE=School Library API
API_VERSION=1.0.0
API_DESCRIPTION=Electronic Library Management System

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Redis Cache (optional)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Backup Settings
BACKUP_ENABLED=true
BACKUP_PATH=./backups
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# Email Notifications (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASSWORD=changeme
SMTP_FROM=Library System <noreply@example.com>

# Docker Registry
REGISTRY=ghcr.io
REGISTRY_USERNAME=your-username
REGISTRY_PASSWORD=your-token

# Deployment
DEPLOY_HOST=production.example.com
DEPLOY_USER=deploy
DEPLOY_PORT=22
SSH_KEY_PATH=/run/secrets/ssh_key

# Slack Notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
